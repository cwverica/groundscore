{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://our.company.com/postNew.schema.json",
  "type": "object",
  "properties": {
    "username": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "locationId": {
      "type": "integer"
    },
    "subject": {
      "type": "string",
      "maxLength": 80
    },
    "body": {
      "type": "string",
      "minLength": 1
    }
  },
  "additionalProperties": false,
  "required": [
    "username",
    "locationId",
    "body"
  ]
}