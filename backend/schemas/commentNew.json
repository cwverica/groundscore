{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://our.company.com/commentNew.schema.json",
    "type": "object",
    "minProperties": 2,
    "properties": {
        "username": {
            "type": "string",
            "minLength": 1,
            "maxLength": 30
        },
        "post_referenceId": {
            "type": "integer"
        },
        "comment_referenceId": {
            "type": "integer"
        },
        "body": {
            "type": "string",
            "minLength": 1
        }
    },
    "additionalProperties": false,
    "required": [
        "username",
        "body"
    ]
}